# =============================================================================
# ᴘʀᴏ ʀᴏʙᴏᴛ Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# REQUIRED: Telegram Bot Token
# Get this from @BotFather on Telegram
# Example: BOT_TOKEN=1234567890:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
BOT_TOKEN=your_bot_token_here

# OPTIONAL: Bot Display Name
# Default: ᴘʀᴏ ʀᴏʙᴏᴛ
BOT_NAME=ᴘʀᴏ ʀᴏʙᴏᴛ

# OPTIONAL: Debug Mode
# Set to True for detailed logging, False for production
# Default: False
DEBUG=False

# OPTIONAL: Logging Configuration
# LOG_LEVEL options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# OPTIONAL: Log File Path
# Default: bot.log
LOG_FILE=bot.log

# OPTIONAL: Drop Pending Updates on Start
# Set to False if you want to process messages sent while bot was offline
# Default: True  
DROP_PENDING_UPDATES=True

# OPTIONAL: Webhook Mode (Advanced)
# Set to True if using webhook instead of polling
# Default: False
WEBHOOK_MODE=False

# OPTIONAL: Webhook URL (only needed if WEBHOOK_MODE=True)
# Example: WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_URL=

# OPTIONAL: Webhook Port (only needed if WEBHOOK_MODE=True)
# Default: 8443
WEBHOOK_PORT=8443
